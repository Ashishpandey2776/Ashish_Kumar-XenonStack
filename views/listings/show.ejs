
<% layout("/listings/layouts/boilerplate") %> 
<body>
    <div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>About</h3>
    </div>
    <div class="card card-listing offset-2 col-6">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
       <b><%=listing.title%></b> 
       <p class="card text">
        <div></div><i>owned by:<%= listing.owner.username %></i>
        <div class="book-btn" style="margin-bottom: 1rem;">
            <a href="/listings/<%=listing.id%>/bookings" class="btn btn-success col-3 offset-9">BookNow</a>
          </div>
    </div>
        <%=listing.description%> <br/>
        <%=listing.price%>       <br/>
        <%=listing.location%> <br/>
        <%=listing.country%>
       </p>
         </div>
    </div>
    <br>

   
 <% if(currUser){ %>
     <% if(currUser._id==listing.owner.id){ %>
   <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-2">Edit</a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
            <button class="
             btn btn-dark offset-4" >Delete</button>
        </form>    
  </div>
  <% } %>
  <% } %>
  
  