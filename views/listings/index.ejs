<% layout("/listings/layouts/boilerplate") %> 

<style>
    .filters{
        display: flex;
        flex-wrap: wrap;   
        align-items: center;
        
    }
    .filter{
        text-align: center;
        margin-left: 2rem;
        margin-top: 2rem;
        margin-bottom: 0.5rem;
        opacity: 0.7;
    }
    .filter:hover{
        opacity: 1;
        cursor: pointer;
    }
    .taxinfo{
      display: none; 
    }
    .tax-togle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.1rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }
</style>
 
 <div class="filters">
      <%  if(currUser){  %>
        <a href="/mybooking/<%=currUser.id %>"style="text-decoration: none; color: inherit;">
        <div class="filter" id="trending"  >
          <div><i class="fa-solid fa-hotel"></i></div>
          <p>MyBooking</p>
        </div>
      </a>
      <%  }  %>
     
 </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 justify-content-center">
        <% for(let data of allListings){ %> 
            <div class="col mb-4">
                <div class="card card-listing h-10 ">
                   <a href="/listings/<%= data._id %>"><img src="<%= data.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;"></a> 
                    <div class="card-body">
                        <p class="card-text">
                            <b><a href="/listings/<%= data._id %>"><%= data.title %></a></b> <br>
                            <i class="fa-solid fa-indian-rupee-sign"></i><%= data.price %>/night
                            <i class="taxinfo">+18% GST</i>
                        </p>
                    </div>
                </div>
            </div>
        <% } %>
    </div>



